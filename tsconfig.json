{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"],
      "@global/*": ["./global/*"],
      "@component/*": ["./src/component/*"],
      "@filter/*": ["./src/filter/*"],
      "@form/*": ["./src/form/*"],
      "@hook/*": ["./src/hook/*"],
      "@mask/*": ["./src/mask/*"],
      "@provider/*": ["./src/provider/*"],
      "@request/*": ["./src/request/*"],
      "@type/*": ["./src/type/*"],
      "@validator/*": ["./src/validator/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
